      font-size: 1.8rem;
    }

    .desc {
      font-size: 0.95rem;
    }

    .section-title {
      font-size: 1.5rem;
    }

    .education-item,
    .research-item {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .education-logo,
    .research-logo {
      margin-right: 0;
      margin-bottom: 1rem;
    }

    .education-header,
    .research-header {
      flex-direction: column;
      align-items: center;
    }

    .education-year,
    .research-period {
      margin-left: 0;
      margin-top: 0.5rem;
    }

    .honor-title,
    .course-title {
      flex-direction: column;
      align-items: flex-start;
    }

    .year-right,
    .term-right {
      margin-left: 0;
      margin-top: 0.5rem;
    }

    .news table tr th {
      display: block;
      margin-bottom: 0.5rem;
      margin-right: 0;
    }

    .news table tr td {
      display: block;
    }
  }
</style>

<div class="post">
  <header class="post-header">
    <h1 class="post-title">
      {% if site.title == 'blank' %}
        <strong><span>{{ site.first_name }}</span></strong>
        <span>{{ site.last_name }}</span>
        <span>({{ site.Chinese_name }})</span>
      {% else %}
        {{ site.title }}
      {% endif %}
    </h1>

    
    <!-- 社交图标 -->
    <div class="social-icons-header">
      {% if site.email %}
        <a href="mailto:{{ site.email }}" title="Email">
          <i class="fas fa-envelope"></i>
        </a>
      {% endif %}
      {% if site.github_username %}
        <a href="https://github.com/{{ site.github_username }}" title="GitHub" target="_blank">
          <i class="fab fa-github"></i>
        </a>
      {% endif %}
      {% if site.scholar_userid %}
        <a href="https://scholar.google.com/citations?user={{ site.scholar_userid }}" title="Google Scholar" target="_blank">
          <i class="ai ai-google-scholar"></i>
        </a>
      {% endif %}
      {% if site.orcid_id %}
        <a href="https://orcid.org/{{ site.orcid_id }}" title="ORCID" target="_blank">
          <i class="fab fa-orcid"></i>
        </a>
      {% endif %}
      {% if site.linkedin_username %}
        <a href="https://www.linkedin.com/in/{{ site.linkedin_username }}" title="LinkedIn" target="_blank">
          <i class="fab fa-linkedin"></i>
        </a>
      {% endif %}
      {% if site.twitter_username %}
        <a href="https://twitter.com/{{ site.twitter_username }}" title="Twitter" target="_blank">
          <i class="fab fa-twitter"></i>
        </a>
      {% endif %}
    </div>
  </header>
</div>

<article>
  {% if page.profile %}
    <div class="profile float-{% if page.profile.align == 'left' %}left{% else %}right{% endif %}">
      {% if page.profile.image %}
        {% assign profile_image_path = page.profile.image | prepend: 'assets/img/' %}
        {% if page.profile.image_circular %}
          {% assign profile_image_class = 'img-fluid z-depth-1 rounded-circle' %}
        {% else %}
          {% assign profile_image_class = 'img-fluid z-depth-1 rounded' %}
        {% endif %}
        {% capture sizes %}(min-width: {{ site.max_width }}) {{ site.max_width | minus: 30 | times: 0.3}}px, (min-width: 576px) 30vw, 95vw"{% endcapture %}
        {% include figure.liquid loading="eager" path=profile_image_path class=profile_image_class sizes=sizes alt=page.profile.image cache_bust=true %}
      {% endif %}
      {% if page.profile.more_info %}
        <div class="more-info">{{ page.profile.more_info }}</div>
      {% endif %}
    </div>
  {% endif %}

  <div class="clearfix">{{ content }}</div>

  <!-- News -->
  {% if page.news and site.announcements.enabled %}
    <h2 class="section-title">
      <span>👀 News</span>
    </h2>
    {% include news.liquid %}
  {% endif %}

  <!-- Education Experience -->
  <div class="education-section">
    <h2 class="section-title">
      <span>👨🏻‍🎓 Education Experience</span>
    </h2>

    <ul class="education-list">
      {% for education in site.education %}
        <li class="education-item">
          <img src="{{ education.logo }}" alt="{{ education.school }} logo" class="education-logo">
          <div class="education-details">
            <div class="education-header">
              <div>
                <span class="education-school">{{ education.school }}</span>
                <span class="education-degree">| {{ education.degree }}</span>
              </div>
              <span class="education-year">{{ education.year }}</span>
            </div>
            <p class="education-intro"><em>{{ education.intro }}</em></p>
          </div>
        </li>
      {% endfor %}
    </ul>
  </div>

  <!-- Research Experience -->
  <div class="research-section">
    <h2 class="section-title">
      <span>🔬 Research Experience</span>
    </h2>

    <ul class="research-list">
      {% for research in site.research %}
        <li class="research-item">
          <img src="{{ research.logo }}" alt="{{ research.institution }} logo" class="research-logo">
          <div class="research-details">
            <!-- 机构、身份和时间 -->
            <div class="research-header">
              <div>
                <span class="research-institution">{{ research.institution }}</span>
                <span class="research-role">{{ research.role }}</span>
              </div>
              <span class="research-period">{{ research.period }}</span>
            </div>
            
            <!-- 实验室和合作者 -->
            <div class="research-info">
              <div class="research-lab">
                <strong>Lab:</strong> {{ research.lab }}
              </div>
              <div class="research-coauthors">
                <strong>Co-Authors:</strong> 
                {% if research.co-authors %}
                  {{ research.co-authors | join: ", " }}
                {% else %}
                  N/A
                {% endif %}
              </div>
            </div>

            <!-- 产出（横向排列）-->
            {% if research.outputs %}
              <div class="research-output-section">
                <strong>Research Works:</strong>
                <ul class="research-output-list">
                  {% for output in research.outputs %}
                    <li>{{ output }}</li>
                  {% endfor %}
                </ul>
              </div>
            {% endif %}
          </div>
        </li>
      {% endfor %}
    </ul>
  </div>

  <!-- Selected papers -->
  {% if page.selected_papers %}
    <h2 class="section-title">
      <span>📖 Publications</span>
    </h2>
    <p style="color: #5a6c7d; font-size: 0.85rem; margin-top: -0.5rem; margin-bottom: 0.8rem;">
      (# denotes co-first Author)
    </p>
    {% include selected_papers.liquid %}
  {% endif %}

  <!-- Selected Honors -->
  {% if site.latest_posts.enabled %}
    <h2 class="section-title">
      <span>🌟 Selected Honors</span>
    </h2>
    <div class="honors-section">
      <ul class="honors-list">
        <li>
          <div class="honor-title">
            <strong><span>Outstanding Graduate Representative</span></strong>
            <span class="year-right">2024</span>
          </div>
          <div class="honor-details">
            Speaker in graduation
          </div>
        </li>
        <li>
          <div class="honor-title">
            <strong><span>Honor Bachelor's Degree</span></strong>
            <span class="year-right">2024</span>
          </div>
          <div class="honor-details">
            Top 3% at Shenzhen University
          </div>
        </li>
        <li>
          <div class="honor-title">
            <strong><span>Outstanding Graduate</span></strong>
            <span class="year-right">2024</span>
          </div>
          <div class="honor-details">
            Top 5% at Shenzhen University
          </div>
        </li>
        <li>
          <div class="honor-title">
            <strong><span>Star of Liyuan</span></strong>
            <span class="year-right">2022, 2023</span>
          </div>
          <div class="honor-details">
            Top 0.73% at Shenzhen University ("Liyuan" means Shenzhen University, ¥20,000)
          </div>
        </li>
        <li>
          <div class="honor-title">
            <strong><span>Scholarship of Outstanding Innovative Talent</span></strong>
            <span class="year-right">2020</span>
          </div>
          <div class="honor-details">
            Top 2% in Guangdong Province Science College Entrance Exam (¥20,000)
          </div>
        </li>
      </ul>
    </div>
  {% endif %}

  <!-- Teaching Assistant -->
  <h2 class="section-title">
    <span>💡 Teaching Assistant</span>
  </h2>
  <div class="teaching-section">
    <ul class="teaching-list">
      <li>
        <div class="course-title">
          <strong><span>Fundamentals of Programming</span></strong>
          <span class="term-right">2022 Fall</span>
        </div>
        <div class="course-details">
          2022 Mathematics and Computer Science Special Class, WeBank Fintech Class
        </div>
      </li>
      <li>
        <div class="course-title">
          <strong><span>Data Structure</span></strong>
          <span class="term-right">2022 Fall, 2023 Fall</span>
        </div>
        <div class="course-details">
          2021 and 2022 Computer Science Classes
        </div>
      </li>
      <li>
        <div class="course-title">
          <strong><span>Object-Oriented Programming</span></strong>
          <span class="term-right">2023 Spring, 2024 Spring</span>
        </div>
        <div class="course-details">
          2022 Mathematics and Computer Science Special Class, WeBank Fintech Class, 2023 Computer Science Class
        </div>
      </li>
      <li>
        <div class="course-title">
          <strong><span>Computer System</span></strong>
          <span class="term-right">2023 Spring</span>
        </div>
        <div class="course-details">
          2022 Mathematics and Computer Science Special Class
        </div>
      </li>
      <li>
        <div class="course-title">
          <strong><span>Introduction to Computer Science</span></strong>
          <span class="term-right">2023 Fall</span>
        </div>
        <div class="course-details">
          Common Optional Course
        </div>
      </li>
      <li>
        <div class="course-title">
          <strong><span>Operating System</span></strong>
          <span class="term-right">2024 Spring</span>
        </div>
        <div class="course-details">
          2021 Computer Science Class
        </div>
      </li>
    </ul>
  </div>

  <!-- Social -->
  {% if page.social %}
    <div class="social">
      <div class="contact-icons">{% include social.liquid %}</div>
      <div class="contact-note">{{ site.contact_note }}</div>
    </div>
  {% endif %}

  {% if site.newsletter.enabled and site.footer_fixed %}
    {% include scripts/newsletter.liquid center=true %}
  {% endif %}
</article>
