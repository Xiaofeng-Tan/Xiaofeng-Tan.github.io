  /* ========== 新闻动态样式（紧凑、浅色）========== */
  .news {
    max-height: 160px;
    overflow-y: auto;
    padding-right: 6px;
    margin-bottom: 1rem;
  }

  .news::-webkit-scrollbar {
    width: 3px;
  }

  .news::-webkit-scrollbar-track {
    background: transparent;
  }

  .news::-webkit-scrollbar-thumb {
    background: #e0e0e0;
    border-radius: 10px;
  }

  .news::-webkit-scrollbar-thumb:hover {
    background: #bdbdbd;
  }

  /* 新闻列表样式 - 紧凑、清爽 */
  .news table {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0;
  }

  .news table tr {
    background: transparent;
    transition: all 0.2s ease;
    display: block;
    margin-bottom: 0.25rem;
    padding: 0.4rem 0;
    border-bottom: 1px solid #f0f0f0;
  }

  .news table tr:last-child {
    border-bottom: none;
  }

  .news table tr:hover {
    background: #fafbfc;
    padding-left: 0.5rem;
  }

  .news table tr th {
    display: inline-block;
    width: auto;
    min-width: 90px;
    max-width: 90px;
    padding: 0.15rem 0.5rem;
    background: #e3f2fd;
    color: #1976d2;
    border-radius: 8px;
    font-size: 0.75rem;
    font-weight: 500;
    margin-right: 0.6rem;
    vertical-align: middle;
    text-align: center;
    white-space: nowrap;
  }

  .news table tr td {
    display: inline;
    font-size: 0.88rem;
    color: #2c3e50;
    line-height: 1.5;
    vertical-align: middle;
  }

  .news table tr td p {
    display: inline;
    margin: 0;
  }

  .news table tr td a {
    color: #1976d2;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .news table tr td a:hover {
    color: #0d47a1;
  }

  .news table tr td em {
    color: #5a6c7d;
    font-style: normal;
    font-size: 0.78rem;
    margin-left: 0.5rem;
  }

