    border: 1px solid rgba(102, 126, 234, 0.08);
    position: relative;
    overflow: hidden;
    backdrop-filter: blur(10px);
  }

  .education-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.06) 0%, rgba(118, 75, 162, 0.06) 100%);
    opacity: 0;
    transition: opacity 0.4s ease;
  }

