    font-size: 1.3rem;
    font-weight: 700;
    color: #2c3e50;
    margin-top: 1.8rem;
    margin-bottom: 0.8rem;
    padding-bottom: 0.5rem;
    padding-left: 1rem;
    border-bottom: 2px solid rgba(102, 126, 234, 0.1);
    display: flex;
    align-items: center;
    position: relative;
    transition: all 0.3s ease;
  }

  .section-title:hover {
    color: #667eea;
  }

  .section-title::before {
    content: '';
    width: 4px;
    height: 1.3rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    margin-right: 0.7rem;
    border-radius: 2px;
    position: absolute;
    box-shadow: 0 2px 6px rgba(102, 126, 234, 0.2);
