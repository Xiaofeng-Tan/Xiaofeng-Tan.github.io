---
layout: default
---
  <div class="post">
    <header class="post-header">
      <h1 class="post-title">
        {% if site.title == 'blank' %}
          <strong><span style="
          letter-spacing: -1px;
          line-height: 0.6;
          margin-bottom: 10px;
          margin-top: 0;
          color: #555;">
          {{ site.first_name }}
        </span></strong>
          <span style="
            letter-spacing: -1px;
            line-height: 0.6;
            margin-bottom: 10px;
            margin-top: 0;
            color: #555;">
            {{ site.last_name }}
          </span>
          
          <strong></strong><span style="
              letter-spacing: -1px;
              line-height: 0.6;
              margin-bottom: 10px;
              margin-top: 0;
              color: #555;">
            ({{ site.Chinese_name }})
          </span></strong>
        {% else %}
          {{ site.title }}
        {% endif %}
      </h1>
      <p class="desc" style="font-size: 14px; color: #999;">
      <a style="color: #999; text-decoration: none;">
        M.Sc in Computer Sciences
      </a> • 
      <a style="color: #999; text-decoration: none;">
        Department of Computer Science and Engineering
      </a> • 
      <a href="https://www.seu.edu.cn" target="_blank" style="color: #999; text-decoration: none;">
        Southeast University
      </a>
    </p>
      </header>
  </div>

  <article>
    {% if page.profile %}
      <div class="profile float-{% if page.profile.align == 'left' %}left{% else %}right{% endif %}">
        {% if page.profile.image %}
          {% assign profile_image_path = page.profile.image | prepend: 'assets/img/' %}
          {% if page.profile.image_circular %}
            {% assign profile_image_class = 'img-fluid z-depth-1 rounded-circle' %}
          {% else %}
            {% assign profile_image_class = 'img-fluid z-depth-1
      rounded' %}
          {% endif %}
          {% capture sizes %}(min-width: {{ site.max_width }}) {{ site.max_width | minus: 30 | times: 0.3}}px, (min-width: 576px)
      30vw, 95vw"{% endcapture %}
          {%
            include figure.liquid loading="eager" path=profile_image_path class=profile_image_class sizes=sizes alt=page.profile.image
            cache_bust=true
          %}
        {% endif %}
        {% if page.profile.more_info %}
          <div class="more-info">{{ page.profile.more_info }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="clearfix">{{ content }}</div>

    <!-- News -->
    {% if page.news and site.announcements.enabled %}
      <h2>
        <strong><span style="color: #555;">
          👀 News
          </span></strong>
      </h2>
      {% include news.liquid %}
    {% endif %}

  <!-- Education Experience -->
  {% if site.latest_posts.enabled %}
    <h2>

    <strong><span style="color: #555;">
    👨🏻‍🎓 Education Experience
    </span></strong>
    </h2>
    <ul style="list-style-type: none; padding: 0;">
      {% for education in site.education %}
        <li style="margin-bottom: 0.8em;">
          <strong><span style="color: #555;">{{ education.school }}</span></strong>
          <span style="color: #555;">| {{ education.degree }}</span><br>
          <span style="font-size: 0.9em; color: #555;">{{ education.year }}</span>
        </li>
      {% endfor %}
    </ul>
  {% else %}
    <p>Coming soon ... 🏗️ 🚧 🔨</p>
  {% endif %}

    <!-- Selected papers -->
    {% if page.selected_papers %}
      <h2>
        <strong><span style="color: #555;">
          📖  Publications
          </span></strong>
      </h2>
      (# denotes co-first Author)
      {% include selected_papers.liquid %}
    {% endif %}

 <!-- Latest posts -->
 {% if site.latest_posts.enabled %}
  <h2>
    <strong><span style="color: #555;">
      🌟 Selected Honors
      </span></strong>
  </h2>
  <div class="honors-section">
    <ul class="honors-list">
      <li>
        <div class="honor-title">
          <strong><span style="color: #555;">Outstanding Graduate Representative</span></strong>
          <span class="year-right">2024</span>
        </div>
        <div class="honor-details">
          <span class="description">Speaker in graduation</span>
        </div>
      </li>
      <li>
        <div class="honor-title">
          <strong><span style="color: #555;">Honor Bachelor's Degree</span></strong>
          <span class="year-right">2024</span>
        </div>
        <div class="honor-details">
          <span class="description">Top 3% at Shenzhen University</span>
        </div>
      </li>
      <li>
        <div class="honor-title">
          <strong><span style="color: #555;">Outstanding Graduate</span></strong>
          <span class="year-right">2024</span>
        </div>
        <div class="honor-details">
          <span class="description">Top 5% at Shenzhen University</span>
        </div>
      </li>
      <li>
        <div class="honor-title">
          <strong><span style="color: #555;">Star of Liyuan</span></strong>
          <span class="year-right">2022, 2023</span>
        </div>
        <div class="honor-details">
          <span class="description">Top 0.73% at Shenzhen University ("Liyuan" means Shenzhen University, ¥20,000)</span>
        </div>
      </li>
      <li>
        <div class="honor-title">
          <strong><span style="color: #555;">Scholarship of Outstanding Innovative Talent (from Shenzhen University)</span></strong>
          <span class="year-right">2020</span>
        </div>
        <div class="honor-details">
          <span class="description">Top 2% in Guangdong Province Science College Entrance Exam (¥20,000)</span>
        </div>
      </li>

    </ul>
  </div>
  
  <style>
    .honors-section {
      margin-top: 10px;
      padding-left: 0;
    }
    .honors-list {
      list-style-type: none;
      padding: 0;
    }
    .honors-list li {
      margin-bottom: 15px;
      display: flex;
      flex-direction: column;
    }
    .honor-title {
      margin-bottom: 4px;
      display: flex;
      justify-content: space-between;  /* 使年份右对齐 */
      width: 100%;
    }
    .honor-details {
      font-size: 0.9em;
      color: #555; /* 浅灰色 */
      display: flex;
      align-items: center;
      width: 100%;
    }
    .year-right {
      color: #555; /* 保留原来颜色 */
      text-align: right; /* 右对齐 */
    }
    .description {
      color: #555;
      flex-shrink: 0;
    }
    .separator {
      margin: 0 8px;
      color: #999; /* 分隔符颜色 */
    }
  </style>
{% endif %}


    <h2>
      <strong><span style="color: #555;">
        💡 Teaching Assistant
        </span></strong>
    </h2>
    
    <div class="teaching-section">
      <ul class="teaching-list">
        <li>
          <div class="course-title">
            <strong><span style="color: #555;">Fundamentals of Programming</span></strong>
            <span class="term-right">2022 Fal.</span>
          </div>
          <div class="course-details">
            <span class="description">2022 Mathematics and Computer Science Special Class, WeBank Fintech Class</span>
          </div>
        </li>
        <li>
          <div class="course-title">
            <strong><span style="color: #555;">Data Structure</span></strong>
            <span class="term-right">2022 Fal., 2023 Fal.</span>
          </div>
          <div class="course-details">
            <span class="description">2021 and 2022 Computer Science Classes</span>
          </div>
        </li>
        <li>
          <div class="course-title">
            <strong><span style="color: #555;">Object-Oriented Programming</span></strong>
            <span class="term-right">2023 Spr., 2024 Spr.</span>
          </div>
          <div class="course-details">
            <span class="description">2022 Mathematics and Computer Science Special Class, WeBank Fintech Class, 2023 Computer Science Class</span>
          </div>
        </li>
        <li>
          <div class="course-title">
            <strong><span style="color: #555;">Computer System</span></strong>
            <span class="term-right">2023 Spr.</span>
          </div>
          <div class="course-details">
            <span class="description">2022 Mathematics and Computer Science Special Class</span>
          </div>
        </li>
        <li>
          <div class="course-title">
            <strong><span style="color: #555;">Introduction to Computer Science</span></strong>
            <span class="term-right">2023 Fal.</span>
          </div>
          <div class="course-details">
            <span class="description">Common Optional Course</span>
          </div>
        </li>
        <li>
          <div class="course-title">
            <strong><span style="color: #555;">Operating System</span></strong>
            <span class="term-right">2024 Spr.</span>
          </div>
          <div class="course-details">
            <span class="description">2021 Computer Science Class</span>
          </div>
        </li>
      </ul>
    </div>
    
    <style>
      .teaching-section {
        margin-top: 10px;
        padding-left: 0;
      }
      .teaching-list {
        list-style-type: none;
        padding: 0;
      }
      .teaching-list li {
        margin-bottom: 15px;
        display: flex;
        flex-direction: column;
      }
      .course-title {
        display: flex;
        justify-content: space-between;  /* 年份右对齐 */
        width: 100%;
      }
      .course-details {
        font-size: 0.9em;
        color: #555; /* 浅灰色 */
        display: flex;
        align-items: center;
        width: 100%;
      }
      .term-right {
        color: #555; /* 保留原来颜色 */
        text-align: right; /* 右对齐 */
        flex-shrink: 0;
      }
      .description {
        color: #555;
        flex-grow: 1; /* 描述占剩余空间 */
      }
      .separator {
        margin: 0 8px;
        color: #999; /* 分隔符稍深灰色 */
      }
    </style>

    <!-- Social -->
    {% if page.social %}
      <div class="social">
        <div class="contact-icons">{% include social.liquid %}</div>

        <div class="contact-note">{{ site.contact_note }}</div>
      </div>
    {% endif %}




    {% if site.newsletter.enabled and site.footer_fixed %}
      {% include scripts/newsletter.liquid center=true %}
    {% endif %}
  </article>
</div>
